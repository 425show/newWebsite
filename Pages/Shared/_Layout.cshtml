<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 425ShowWebsite</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
          rel="stylesheet" 
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3" style="background-color:black;">
            <div class="container">
                 <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/microsoft-logo.svg" alt="Microsoft logo" width ="240" />
                </a>
                <button class="navbar-toggler btn btn-light" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon btn btn-light"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#">Watch</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#">Connect</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#">Activities</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="">Twitter Spaces</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer footer-border fixed-bottom">
        <div class="container text-end">
            <a class="text-decoration-none link-light" style="margin-right:10px" href="https://go.microsoft.com/fwlink/?LinkId=521839">Privacy</a>
            <a class="text-decoration-none link-light" style="margin-right:10px" href="https://go.microsoft.com/fwlink/?LinkID=206977">Terms of use</a>
            <a class="text-decoration-none link-light" style="margin-right:10px" href="https://www.microsoft.com/trademarks/">Trademarks</a>
            <span class="text-light">&copy; Microsoft @DateTime.Today.Year</span>
        </div>
    </footer>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" 
            crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>